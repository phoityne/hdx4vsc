{
	"name": "phoityne-vscode",
	"displayName": "Haskell GHCi Debug Adapter Phoityne",
	"version": "0.0.30",
	"publisher": "phoityne",
	"description": "Haskell GHCi Debug Adapter Phoityne for Visual Studio Code.",
	"categories": [
		"Debuggers"
	],
	"author": {
		"name": "phoityne.hs"
	},
	"license": "BSD3",
	"repository": {
		"url": "https://github.com/phoityne/hdx4vsc/"
	},
	"bugs": {
		"url": "https://github.com/phoityne/hdx4vsc/issues"
	},
	"private": false,
	"engines": {
		"vscode": "^1.27.0"
	},
	"extensionDependencies": [
		"justusadam.language-haskell"
	],
	"dependencies": {
		"vsce": "^2.11.0"
	},
	"icon": "images/HaskellLogo.png",
	"keywords": [
		"debug",
		"haskell",
		"ghc",
		"ghci",
		"cabal",
		"stack"
	],
	"activationEvents": [
		"onLanguage:haskell"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.hdx4vsc.haskellDebuggingFromEditor",
				"title": "Start Haskell Debugging"
			},
			{
				"command": "extension.hdx4vsc.haskellDebuggingFromExplore",
				"title": "Start Haskell Debugging"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == haskell && !inDebugMode",
					"command": "extension.hdx4vsc.haskellDebuggingFromEditor",
					"title": "Start Haskell Debugging"
				}
			],
			"explorer/context": [
				{
					"when": "resourceLangId == haskell && !inDebugMode",
					"command": "extension.hdx4vsc.haskellDebuggingFromExplore",
					"title": "Start Haskell Debugging"
				}
			]
		},
		"keybindings": [
			{
				"key": "f6",
				"command": "workbench.action.tasks.runTask",
				"when": "!inDebugMode"
			},
			{
				"key": "shift+f6",
				"command": "workbench.action.tasks.terminate",
				"when": "!inDebugMode"
			},
			{
				"key": "f7",
				"command": "workbench.action.tasks.build",
				"when": "!inDebugMode"
			},
			{
				"key": "f8",
				"command": "workbench.action.tasks.test",
				"when": "!inDebugMode"
			},
			{
				"key": "f10",
				"command": "extension.hdx4vsc.haskellDebuggingFromEditor",
				"when": "resourceLangId == haskell && editorTextFocus && !inDebugMode"
			}
		],
		"breakpoints": [
			{
				"language": "haskell"
			}
		],
		"debuggers": [
			{
				"type": "ghc",
				"label": "haskell-debug-adapter",
				"windows": {
					"program": "phoityne-vscode.bat"
				},
				"osx": {
					"runtime": "sh",
					"program": "phoityne-vscode.sh"
				},
				"linux": {
					"runtime": "sh",
					"program": "phoityne-vscode.sh"
				},
				"configurationAttributes": {
					"launch": {
						"required": [
							"workspace",
							"startup",
							"stopOnEntry",
							"ghciPrompt",
							"ghciCmd",
							"ghciEnv",
							"logFile",
							"logLevel"
						],
						"properties": {
							"workspace": {
								"type": "string",
								"description": "Absolute path to the workspace.",
								"default": "${workspaceFolder}"
							},
							"startup": {
								"type": "string",
								"description": "Absolute path to the startup program.",
								"default": "${workspaceFolder}/test/Spec.hs"
							},
							"startupFunc": {
								"type": "string",
								"description": "startup function.",
								"default": ""
							},
							"startupArgs": {
								"type": "string",
								"description": "startup arguments.",
								"default": ""
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "stop debuggin when ghci is launched.",
								"default": false
							},
							"mainArgs": {
								"type": "string",
								"description": "main arguments set by ghci :set args commad.",
								"default": ""
							},
							"ghciPrompt": {
								"type": "string",
								"description": "ghci prompt string.",
								"default": "H>>= "
							},
							"ghciInitialPrompt": {
								"type": "string",
								"description": "ghci initial prompt.",
								"default": "> "
							},
							"ghciCmd": {
								"type": "string",
								"description": "ghci command.",
								"default": "ghci-dap"
							},
							"ghciEnv": {
								"type": "object",
								"description": "ghci runtime environments.",
								"default": {}
							},
							"logFile": {
								"type": "string",
								"description": "Absolute path to the log file.",
								"default": "${workspaceFolder}/.vscode/phoityne.log"
							},
							"logLevel": {
								"type": "string",
								"description": "logging level.",
								"default": "WARNING"
							},
							"forceInspect": {
								"type": "boolean",
								"description": "force inspect variables.",
								"default": false
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "ghc",
						"request": "launch",
						"name": "haskell(hie-bios)",
						"internalConsoleOptions": "openOnSessionStart",
						"workspace": "${workspaceFolder}",
						"startup": "${workspaceFolder}/test/Spec.hs",
						"startupFunc": "",
						"startupArgs": "",
						"stopOnEntry": false,
						"mainArgs": "",
						"ghciPrompt": "H>>= ",
						"ghciInitialPrompt": "> ",
						"ghciCmd": "ghci-dap",
						"ghciEnv": {},
						"logFile": "${workspaceFolder}/.vscode/phoityne.log",
						"logLevel": "WARNING",
						"forceInspect": false
					},
					{
						"type": "ghc",
						"request": "launch",
						"name": "haskell(stack)",
						"internalConsoleOptions": "openOnSessionStart",
						"workspace": "${workspaceFolder}",
						"startup": "${workspaceFolder}/test/Spec.hs",
						"startupFunc": "",
						"startupArgs": "",
						"stopOnEntry": false,
						"mainArgs": "",
						"ghciPrompt": "H>>= ",
						"ghciInitialPrompt": "> ",
						"ghciCmd": "stack ghci --with-ghc=ghci-dap --test --no-load --no-build --main-is TARGET",
						"ghciEnv": {},
						"logFile": "${workspaceFolder}/.vscode/phoityne.log",
						"logLevel": "WARNING",
						"forceInspect": false
					},
					{
						"type": "ghc",
						"request": "launch",
						"name": "haskell(cabal)",
						"internalConsoleOptions": "openOnSessionStart",
						"workspace": "${workspaceFolder}",
						"startup": "${workspaceFolder}/app/Main.hs",
						"startupFunc": "",
						"startupArgs": "",
						"stopOnEntry": false,
						"mainArgs": "",
						"ghciPrompt": "H>>= ",
						"ghciInitialPrompt": "> ",
						"ghciCmd": "cabal repl -w ghci-dap --repl-no-load --builddir=${workspaceFolder}/.vscode/dist-cabal-repl",
						"ghciEnv": {},
						"logFile": "${workspaceFolder}/.vscode/phoityne.log",
						"logLevel": "WARNING",
						"forceInspect": false
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.59",
		"tslint": "^5.20.1",
		"typescript": "^2.9.2",
		"vscode": "^1.1.37"
	}
}
